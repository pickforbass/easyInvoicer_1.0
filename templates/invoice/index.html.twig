{% extends 'base.html.twig' %}

{% block title %}Factures{% endblock %}

{% block stylesheets %}
    <link rel=stylesheet href='{{asset('assets/styles/table.css')}}'>
{% endblock %}

{% block body %}
    <h1>Vos factures</h1>

    <a class="to-new" href="{{ path('invoice_new') }}">Nouvelle facture</a>

    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Date</th>
                <th>Client</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.number }}</td>
                <td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
                <td>{{ invoice.client }}</td>
                <td>
                    <a href="{{ path('invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
